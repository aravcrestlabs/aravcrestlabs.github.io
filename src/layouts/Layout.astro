---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
    description?: string;
    scripts?: string[];
}

const { title, description = "Premium jewelry billing software by AravCrestLabs. GemCrest - Modern, offline-first billing solution.", scripts = [] } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AravCrestLabs - {title}</title>
    <meta name="description" content={description}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700;900&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/main.css">
    <script is:inline>
        window.BASE_PATH = "/";
    </script>
    <script define:vars={{
        SERVER_URL: import.meta.env.SERVER_URL || 'https://uigmdykavqllplgdxtxs.supabase.co/functions/v1/licensing',
        RAZORPAY_KEY: import.meta.env.RAZORPAY_KEY || 'PLACEHOLDER_KEY',
        AMOUNT: import.meta.env.PUBLIC_AMOUNT || '500000'
    }}>
        window.GEMCREST_CONFIG = {
            serverUrl: SERVER_URL,
            razorpayKey: RAZORPAY_KEY,
            amount: AMOUNT
        };
    </script>
    <link rel="stylesheet" href="/css/animations.css">

    <!-- Brutalist Libraries -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script is:inline src="https://unpkg.com/@studio-freight/lenis@1.0.42/dist/lenis.min.js"></script>
</head>
<body>
    <Header title={title} />
    
    <slot />

    <Footer />

    <script is:inline src="/js/main.js"></script>
    <script is:inline src="/js/brutalist.js"></script>
    
    {scripts.map((script) => (
        <script is:inline src={script.startsWith('http') ? script : `/js/${script}`}></script>
    ))}
</body>
</html>
