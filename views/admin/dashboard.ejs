<%- include('../partials/header', { title: 'Command & Control' }) %>

    <!-- Admin Dashboard Structure -->
    <section class="section">
        <div class="container">
            <!-- Dashboard Header -->
            <div
                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem; flex-wrap: wrap; gap: 1rem;">
                <div>
                    <h1 style="font-size: 3rem; margin-bottom: 0.5rem;">SYS <span class="accent">ADMIN</span></h1>
                    <p style="font-family: var(--font-mono); opacity: 0.7;">System Status: OPERATIONAL</p>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <button id="refresh-btn" class="btn btn-secondary">
                        <span>↻ SYNC</span>
                    </button>
                    <button id="logout-btn" class="btn btn-secondary" style="border-color: red; color: red;">
                        <span>LOGOUT</span>
                    </button>
                </div>
            </div>

            <!-- Stats Grid -->
            <!-- Stats Grid -->
            <!-- Stats Toolbar -->
            <div style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: nowrap; overflow-x: auto;">
                <!-- Total -->
                <div
                    style="border: var(--border-thick); padding: 0.5rem 1rem; background: var(--bg-color); box-shadow: var(--shadow-hard); display: flex; align-items: baseline; gap: 0.75rem; flex: 1; min-width: max-content;">
                    <span style="font-size: 0.8rem; font-weight: 700; text-transform: uppercase;">Total</span>
                    <span style="font-size: 1.25rem; font-weight: 900; line-height: 1;" id="stat-total">-</span>
                </div>

                <!-- Active -->
                <div
                    style="border: var(--border-thick); padding: 0.5rem 1rem; background: #e6ffe6; box-shadow: var(--shadow-hard); display: flex; align-items: baseline; gap: 0.75rem; flex: 1; min-width: max-content;">
                    <span
                        style="font-size: 0.8rem; font-weight: 700; text-transform: uppercase; color: green;">Active</span>
                    <span style="font-size: 1.25rem; font-weight: 900; line-height: 1; color: green;"
                        id="stat-active">-</span>
                </div>

                <!-- Devices -->
                <div
                    style="border: var(--border-thick); padding: 0.5rem 1rem; background: var(--bg-color); box-shadow: var(--shadow-hard); display: flex; align-items: baseline; gap: 0.75rem; flex: 1; min-width: max-content;">
                    <span style="font-size: 0.8rem; font-weight: 700; text-transform: uppercase;">Devices</span>
                    <span style="font-size: 1.25rem; font-weight: 900; line-height: 1;" id="stat-devices">-</span>
                </div>

                <!-- Revoked -->
                <div
                    style="border: var(--border-thick); padding: 0.5rem 1rem; background: #ffe6e6; box-shadow: var(--shadow-hard); display: flex; align-items: baseline; gap: 0.75rem; flex: 1; min-width: max-content;">
                    <span
                        style="font-size: 0.8rem; font-weight: 700; text-transform: uppercase; color: red;">Revoked</span>
                    <span style="font-size: 1.25rem; font-weight: 900; line-height: 1; color: red;"
                        id="stat-revoked">-</span>
                </div>
            </div>

            <!-- Settings Toolbar -->
            <div
                style="margin-bottom: 2rem; border: var(--border-thick); padding: 1rem; background: var(--bg-color); box-shadow: var(--shadow-hard);">
                <h3
                    style="margin-bottom: 1rem; font-size: 1.2rem; border-bottom: 1px solid #ccc; padding-bottom: 0.5rem; font-weight: bold;">
                    SYSTEM CONFIGURATION</h3>
                <form id="settings-form" style="display: flex; gap: 1rem; align-items: flex-end; flex-wrap: wrap;">
                    <div style="flex: 1; min-width: 200px;">
                        <label
                            style="font-size: 0.8rem; font-weight: bold; display: block; margin-bottom: 0.5rem;">LICENSE
                            PRICE (INR - Paise)</label>
                        <input type="number" id="setting-price" required placeholder="500000"
                            style="width: 100%; padding: 0.5rem; border: var(--border-thick); font-family: var(--font-mono);">
                        <small style="display:block; margin-top:0.25rem; opacity:0.6;">Example: 500000 = ₹5,000</small>
                    </div>
                    <button type="submit" class="btn btn-secondary">UPDATE PRICE</button>
                    <div id="settings-msg" style="margin-left: 1rem; font-weight: bold;"></div>
                </form>
            </div>

            <!-- Actions Toolbar -->
            <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px; display: flex;">
                    <div
                        style="background: black; color: white; padding: 0.75rem; font-weight: bold; display: flex; align-items: center;">
                        SEARCH</div>
                    <input type="text" id="search-input" placeholder="Filter by Code, Name, Email..."
                        style="flex: 1; padding: 0.75rem; border: var(--border-thick); border-left: none; font-family: var(--font-mono); outline: none;">
                </div>
                <button id="create-btn" class="btn btn-primary">
                    + ISSUE NEW LICENSE
                </button>
            </div>

            <!-- Data Table -->
            <div style="overflow-x: auto; border: var(--border-thick); box-shadow: var(--shadow-hard);">
                <table
                    style="width: 100%; border-collapse: collapse; font-family: var(--font-mono); font-size: 0.9rem;">
                    <thead>
                        <tr style="background: #000; color: #fff;">
                            <th style="padding: 1rem; text-align: left; border-right: 1px solid #333;">LICENSE CODE</th>
                            <th style="padding: 1rem; text-align: left; border-right: 1px solid #333;">USER DETAILS</th>
                            <th style="padding: 1rem; text-align: left; border-right: 1px solid #333;">STATUS</th>
                            <th style="padding: 1rem; text-align: left; border-right: 1px solid #333;">DEVICE ID</th>
                            <th style="padding: 1rem; text-align: left; border-right: 1px solid #333;">DATE</th>
                            <th style="padding: 1rem; text-align: left;">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody id="license-table-body">
                        <!-- Data Injected Here -->
                        <tr>
                            <td colspan="6" style="padding: 3rem; text-align: center;">Loading System Data...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Create License Modal -->
    <div id="create-modal" class="hidden"
        style="position: fixed; inset: 0; background: rgba(0,0,0,0.8); z-index: 2000; display: flex; align-items: center; justify-content: center;">
        <div class="pricing-card" style="width: 100%; max-width: 500px; margin: 2rem;">
            <h3 style="margin-bottom: 1.5rem; border-bottom: var(--border-thick); padding-bottom: 0.5rem;">Issue License
            </h3>
            <form id="create-form">
                <div class="form-group">
                    <label>Customer Name</label>
                    <input type="text" id="new-name" required>
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" id="new-email" required>
                </div>
                <div style="margin-top: 2rem; display: flex; gap: 1rem;">
                    <button type="button" class="btn btn-secondary w-full" id="close-modal-btn">Cancel</button>
                    <button type="submit" class="btn btn-primary w-full">Generate</button>
                </div>
            </form>
        </div>
    </div>

    <script src="<%= path %>js/admin.js"></script>
    <%- include('../partials/footer', { scripts: [] }) %>